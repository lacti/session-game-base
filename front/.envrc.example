else
  # connection info
  export REACT_APP_AUTH_URL="https://AUTH_URL"
  export REACT_APP_LOBBY_URL="wss://LOBBY_URL"
  export REACT_APP_GAME_APPLICATION_ID="APPLICATION_ID"

  # deployment info
  export S3_BUCKET_NAME="S3_BUCKET_NAME"
