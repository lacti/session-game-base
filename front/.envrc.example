  export REACT_APP_AUTH_URL="https://DEV_AUTH_URL"
  export REACT_APP_LOBBY_URL="wss://DEV_LOBBY_URL"
  export REACT_APP_GAME_APPLICATION_ID="DEV_APPLICATION_ID"

  # deployment info
  export S3_BUCKET_NAME="S3_DEV_BUCKET_NAME"
  export S3_BUCKET_PATH="S3_DEV_BUCKET_PATH"
